{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "dist",
    "lib": [
      "ES6",
      "esnext.asynciterable"
    ],
    "paths": { //"@/*": ["*"],
      "@admin/*": [
        "./admin/*"
      ],
      "@auth/*": [
        "./auth/*"
      ],
      "@token/*": [
        "./token/*"
      ],
      "@common/*": [
        "./common/*"
      ],
      "@config": [
        "./config"
      ],
      "@course/*": [
        "./course/*"
      ],
      "@databases": [
        "./databases"
      ],
      "@exceptions/*": [
        "./exceptions/*"
      ],
      "@instructor/*": [
        "./instructor/*"
      ],
      "@middlewares/*": [
        "./middlewares/*"
      ],
      "@newsLetter/*": [
        "./newsLetter/*"
      ],
      "@services/*": [
        "./services/*"
      ],
      "@trainee/*": [
        "./trainee/*"
      ],
      "@user/*": [
        "./user/*"
      ],
      "@utils/*": [
        "./utils/*"
      ]
    },
    "pretty": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ], // Include all TypeScript files in the src directory
  "exclude": [
    "node_modules",
    "dist"
  ] // Exclude node_modules and dist directories
}