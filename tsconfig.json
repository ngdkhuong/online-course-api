{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "dist",
    "paths": {
      "@newsLetter/*": [
        "./newsLetter/*"
      ],
      "@auth/*": [
        "./auth/*"
      ],
      "@config/*": [
        "./config/*"
      ],
      "@constants/*": [
        "./constants/*"
      ],
      "@controllers/*": [
        "./controllers/*"
      ],
      "@databases/*": [
        "./databases/*"
      ],
      "@middlewares/*": [
        "./middlewares/*"
      ],
      "@models/*": [
        "./models/*"
      ],
      "@routes/*": [
        "./routes/*"
      ],
      "@interfaces/*": [
        "./interfaces/*"
      ],
      "@services/*": [
        "./services/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@logs/*": [
        "./logs/*"
      ]
    },
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}