{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": [
      "es2017",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "dist",
    "paths": {
      "@/*": [
        "*"
      ],
      "@admin/*": [
        "./admin/*"
      ],
      "@auth/*": [
        "./auth/*"
      ],
      "@token/*": [
        "./token/*"
      ],
      "@common/*": [
        "./common/*"
      ],
      "@config": [
        "./config"
      ],
      "@course/*": [
        "./course/*"
      ],
      "@databases": [
        "./databases"
      ],
      "@exceptions/*": [
        "./exceptions/*"
      ],
      "@instructor/*": [
        "./instructor/*"
      ],
      "@middlewares/*": [
        "./middlewares/*"
      ],
      "@newsLetter/*": [
        "./newsLetter/*"
      ],
      "@services/*": [
        "./services/*"
      ],
      "@trainee/*": [
        "./trainee/*"
      ],
      "@user/*": [
        "./user/*"
      ],
      "@utils/*": [
        "./utils/*"
      ]
    },
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "src/http",
    "src/logs"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
    ".env",
    "swagger.ts"
  ]
}